<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="10dp"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_weight="4"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch"/>
            <TextView
                android:id="@+id/search"
                android:layout_weight="1"
                android:background="@drawable/icon_search"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            />

        <LinearLayout
android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:weightSum="12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_weight="2"
             android:layout_marginTop="5dp"
                android:id="@+id/btnPrev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="@android:color/transparent"
                android:contentDescription="@string/todo"
                android:src="@drawable/icon_arrow_left" />

            <TextView

                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_weight="8"
                android:background="@drawable/textview_date"
                android:gravity="center"
                android:textAlignment="center" />

            <ImageButton
android:layout_marginTop="5dp"

                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:contentDescription="@string/todo"
                android:src="@drawable/icon_arrow_right" />


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:weightSum="7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:textColor="@color/black"
                        android:background="@color/grey"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:text="CN"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textColor="@color/black"
                        android:background="@color/grey"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:text="T2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textColor="@color/black"
                        android:background="@color/grey"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:text="T3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:textColor="@color/black"
                        android:background="@color/grey"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:text="T4"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textColor="@color/black"
                        android:background="@color/grey"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:text="T5"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:textColor="@color/black"
                        android:background="@color/grey"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:text="T6"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textColor="@color/black"
                        android:background="@color/grey"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:text="T7"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <GridView
                    android:id="@+id/calendarGrid"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:numColumns="7" />



                <!-- Các LinearLayout chứa thông tin Thu Nhập, Chi Tiêu, Tổng -->
                <LinearLayout
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- ... -->

                </LinearLayout>

                <!-- Các TextView chứa thông tin Số dư đầu kì và Số dư -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/black"

                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:text="Thu Nhập"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:textColor="@color/blue"
                            android:id="@+id/thunhap"
                            android:textAlignment="center"
                            android:textSize="16dp"
android:text="0đ"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/black"

                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:text="Chi Tiêu"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:textColor="@color/red"
                            android:id="@+id/chitieu"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:text="0đ"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/black"

                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:text="Tổng"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:textColor="@color/red"
                            android:id="@+id/tong"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:text="0đ"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    />



<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/black"
        android:id="@+id/khongcodulieu"
        android:textAlignment="center"
        android:textSize="16dp"
android:text="Không Có Dữ Liệu!"
android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</FrameLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </LinearLayout>



</FrameLayout>