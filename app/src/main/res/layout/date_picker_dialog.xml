<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/imv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/back_report" />

        <LinearLayout
            android:id="@+id/layout_pick_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/imv_next"
            android:layout_toEndOf="@id/imv_back"
            android:background="@color/orange_1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/forward_report" />

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rdg_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="1" />

        <RadioButton
            android:id="@+id/rd_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="2" />

        <RadioButton
            android:id="@+id/rd_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="3" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rdg_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdg_1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="4" />

        <RadioButton
            android:id="@+id/rd_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="5" />

        <RadioButton
            android:id="@+id/rd_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="6" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rdg_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdg_2"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="7" />

        <RadioButton
            android:id="@+id/rd_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="8" />

        <RadioButton
            android:id="@+id/rd_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="9" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rdg_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdg_3"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="10" />

        <RadioButton
            android:id="@+id/rd_11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="11" />

        <RadioButton
            android:id="@+id/rd_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/orange"
            android:gravity="center"
            android:text="12" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdg_4"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_15sdp"
        android:text="OK"
        android:textColor="@color/orange"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdg_4"
        android:layout_toStartOf="@+id/tv_ok"
        android:padding="@dimen/_15sdp"
        android:text="bá» qua"
        android:textAllCaps="true"
        android:textColor="@color/orange"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />
</RelativeLayout>