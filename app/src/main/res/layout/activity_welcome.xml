<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".ui.user.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/lato_bold"
            android:text="Money Lover"
            android:textSize="@dimen/_15sdp"
            android:textColor="#E97338" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="@dimen/_5sdp">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imgSlideWelcome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            app:iss_auto_cycle="true"
            app:iss_delay="1000"
            app:iss_period="1000"
            app:iss_text_align="CENTER" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_GoogleLogin"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableStart="@drawable/img"
        android:paddingStart="@dimen/_10sdp"
        android:paddingRight="@dimen/_30sdp"
        android:background="@drawable/button_background_red"
        android:text="Đăng nhập với Google"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textColor="@color/red"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hoặc"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_GoogleRegister"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/img"
        android:paddingStart="@dimen/_10sdp"
        android:paddingRight="@dimen/_30sdp"
        android:background="@drawable/button_background_red"
        android:text="Đăng ký với Google"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textColor="@color/green"
        />

</LinearLayout>