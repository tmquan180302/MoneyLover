<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.InputFragment">




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_marginTop="5dp"
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_arrow_left" />
            <TextView
                android:layout_marginTop="@dimen/_1sdp"
                android:textColor="@color/orange"
                android:layout_weight="2"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Lịch"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:layout_weight="6"

                android:textSize="24dp"
                android:textColor="@color/black"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chỉnh Sửa"/>
            <ImageButton
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
            android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_pen" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:textColor="@color/color_text_1"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/imb_reduce_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:src="@drawable/icon_arrow_left" />

        <TextView
            android:id="@+id/tv_selected_date"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/textview_date"
            android:gravity="center"
            android:text="05/01/2020 (Th 2)"
            android:textColor="@color/color_text_1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imb_increase_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:src="@drawable/icon_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:textColor="@color/color_text_1"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edt_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/border"
            android:hint="Chưa nhập vào"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/color_text_2"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Tiền chi"
            android:textColor="@color/color_text_1"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edt_money"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/textview_date"
            android:digits="0123456789"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="29"
            android:paddingHorizontal="8dp"
            android:text="0"
            android:textColor="@color/color_text_1"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="₫"
            android:textColor="@color/color_text_1"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Danh mục"
        android:textColor="@color/color_text_1"
        android:textSize="17sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="4" />

    <Button
        android:id="@+id/btn_input"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/orange"
        android:text="Chỉnh sửa khoản chi"
        android:textSize="18sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        />
    <TextView
        android:id="@+id/xoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:textColor="@color/blue"
        android:textSize="18dp"
     android:layout_marginRight="20dp"
        android:textAlignment="textEnd"
        android:layout_marginBottom="20dp"
        />

</LinearLayout>