<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/orange" />
            <corners android:bottomLeftRadius="4dp" android:topLeftRadius="4dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/red" />
            <corners android:bottomLeftRadius="5dp"  android:topLeftRadius="4dp"  />
        </shape>
    </item>

</selector>
